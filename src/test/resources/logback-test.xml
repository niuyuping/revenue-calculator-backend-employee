<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Test environment uses simple console logging configuration -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Root logger -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>
    
    <!-- Application logger -->
    <logger name="jp.asatex.revenue_calculator_backend_employee" level="INFO"/>
</configuration>